          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"status\": \"pending\",\n  \"formData\": {\n    \"reportPreparedBy\": \"John Doe\",\n    \"inspector\": \"Jane Smith\",\n    \"consentPermitHolder\": \"ABC Company Ltd\",\n    \"consentPermitNo\": \"CP123456\",\n    \"siteName\": \"Sample Site\",\n    \"siteContact\": \"contact@example.com\",\n    \"siteAddress\": \"123 Main Street\",\n    \"siteRefPostcode\": \"12345\",\n    \"irishGridRef\": \"IG123456\",\n    \"flowmeterMakeModel\": \"Model XYZ\",\n    \"flowmeterType\": \"Type A\",\n    \"flowmeterSerial\": \"SN123456\",\n    \"niwAssetId\": \"NIW001\",\n    \"statementOfCompliance\": \"Compliant\",\n    \"inspectionReportNo\": \"IR001\",\n    \"dateOfInspection\": \"2024-01-15\",\n    \"siteDescription\": \"Industrial site with wastewater treatment\"\n  }\n}"
