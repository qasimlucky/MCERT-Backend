  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Pre-request script can be used to set dynamic variables"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-extract second form ID from create response",
          "if (pm.info.requestName === 'Create Second Form' || pm.info.requestName === 'Create Second Form (Minimal)' || pm.info.requestName === 'Submit Second Form') {",
          "    const response = pm.response.json();",
          "    if (response.data && response.data._id) {",
          "        pm.collectionVariables.set('secondFormId', response.data._id);",
          "        console.log('Second Form ID extracted:', response.data._id);",
          "    }",
          "    ",
          "    // Test that required fields are present",
          "    pm.test('Response contains success field', function () {",
          "        pm.expect(response).to.have.property('success');",
          "    });",
          "    ",
          "    pm.test('Response contains data field', function () {",
          "        pm.expect(response).to.have.property('data');",
          "    });",
          "    ",
          "    if (response.data) {",
          "        pm.test('Data contains _id', function () {",
          "            pm.expect(response.data).to.have.property('_id');",
          "        });",
          "        ",
          "        pm.test('Data contains userId', function () {",
          "            pm.expect(response.data).to.have.property('userId');",
          "        });",
          "        ",
          "        pm.test('Data contains status', function () {",
          "            pm.expect(response.data).to.have.property('status');",
          "        });",
          "    }",
          "}",
          "",
          "// Test response status",
          "pm.test('Status code is 200, 201, or 204', function () {",
          "    pm.expect(pm.response.code).to.be.oneOf([200, 201, 204]);",
          "});",
          "",
          "// Test response time",
          "pm.test('Response time is less than 5000ms', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});",
          "",
          "// Test that response is JSON (for non-empty responses)",
          "if (pm.response.code !== 204 && pm.response.text()) {",
          "    pm.test('Response is valid JSON', function () {",
          "        pm.response.to.be.json;",
          "    });",
          "}"
        ]
      }
    }
